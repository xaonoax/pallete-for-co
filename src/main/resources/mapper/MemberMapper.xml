<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.palleteforco.palleteforco.domain.member.mapper.MemberMapper">
    <insert id="insertMember" useGeneratedKeys="true" keyProperty="member_id">
        INSERT INTO MEMBER(ID, NAME, PHONE_NUMBER, JOIN_DATE)
        VALUES(#{id}, #{name}, #{phone_number}, #{join_date})
    </insert>
    <select id="selectMemberProfile">
        SELECT *
        FROM MEMBER
        WHERE MEMBER_ID = #{member_id}
    </select>
    <update id="updateMemberInfo">
        UPDATE MEMBER
        SET NAME = #{name}, PHONE_NUMBER = #{phone_number}
    </update>
</mapper>